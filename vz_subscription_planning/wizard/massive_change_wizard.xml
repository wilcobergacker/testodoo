<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_subscription_planning_massive_change" model="ir.ui.view">
            <field name="name">subscription.planning.massive.change.view</field>
            <field name="model">subscription.planning.massive.change</field>
            <field name="arch" type="xml">
                <form string="Massive Change">
                    <group>
                        <field name="line_id" invisible="1"/>
                        <field name="cancel_lines"/>
                        <field name="price" attrs="{'invisible':[('cancel_lines','=',True)]}"/>
                        <field name="qty" attrs="{'invisible':[('cancel_lines','=',True)]}"/>
                        <field name="weekday" attrs="{'invisible':[('cancel_lines','=',True)]}"/>
                        <field name="date_start" required="1"/>
                    </group>
                    <footer>
                        <button name="make_change" string="Make Change" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_planning_massive_change" model="ir.actions.act_window">
            <field name="name">Massive Change</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">subscription.planning.massive.change</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_subscription_planning_massive_change"/>
            <field name="target">new</field>
        </record>

    </data>
</odoo>
