<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="subscription_planning_change_tree_view" model="ir.ui.view">
        <field name="name">subscription.planning.change.tree</field>
        <field name="model">sale.subscription.planning.change</field>
        <field name="arch" type="xml">
            <tree create="0" string="Subscription Planning Changes">
                <field name="subscription_line_id"/>
                <field name="planning_line_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="subscription_planning_change_form_view" model="ir.ui.view">
        <field name="name">sale.subscription.planning.change.form</field>
        <field name="model">sale.subscription.planning.change</field>
        <field name="arch" type="xml">
            <form create="0" string="Subscription Planning Change">
                <sheet>
                    <group>
                        <group>
                            <field name="subscription_line_id" readonly="1"/>
                            <field name="planning_line_id" readonly="1"/>
                            <field name="description" readonly="1"/>
                        </group>
                        <group>
                            <field name="date_changed" readonly="1"/>
                            <field name="old_date" readonly="1" attrs="{'invisible': [('date_changed','=',False)]}"/>
                            <field name="new_date" readonly="1" attrs="{'invisible': [('date_changed','=',False)]}"/>
                        </group>
                        <group>
                            <field name="product_id_changed" readonly="1"/>
                            <field name="old_product_id" readonly="1" attrs="{'invisible': [('product_id_changed','=',False)]}"/>
                            <field name="new_product_id" readonly="1" attrs="{'invisible': [('product_id_changed','=',False)]}"/>
                        </group>
                        <group>
                            <field name="price_changed" readonly="1"/>
                            <field name="old_price" readonly="1" attrs="{'invisible': [('price_changed','=',False)]}"/>
                            <field name="new_price" readonly="1" attrs="{'invisible': [('price_changed','=',False)]}"/>
                        </group>
                        <group>
                            <field name="qty_changed" readonly="1"/>
                            <field name="old_qty" readonly="1" attrs="{'invisible': [('qty_changed','=',False)]}"/>
                            <field name="new_qty" readonly="1" attrs="{'invisible': [('qty_changed','=',False)]}"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <record id="subscription_planning_change_search" model="ir.ui.view">
        <field name="name">sale.subscription.planning.change.search</field>
        <field name="model">sale.subscription.planning.change</field>
        <field name="arch" type="xml">
            <search string="Planning Lines">
                <field name="subscription_line_id" string="Subscription"/>
                <field name="planning_line_id" string="Planning"/>
                <group expand="0" string="Group By">
                    <filter string="Subscription Line" name="subscription_line_id" domain="[]" context="{'group_by':'subscription_line_id'}"/>
                    <filter string="Planning Line" name="planning_line_id" domain="[]" context="{'group_by':'planning_line_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="subscription_planning_change_action" model="ir.actions.act_window">
        <field name="name">Subscription Planning Changes</field>
        <field name="res_model">sale.subscription.planning.change</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="subscription_planning_change_search"/>
    </record>

</odoo>
