<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="name">view.sale.subscription.form</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>
            <xpath expr="//button[@name='action_open_sales']" position="after">
                <button class="oe_stat_button" icon="fa-database" name="action_open_planning" attrs="{'invisible': [('planning_line_count','=',0)]}" type="object">
                    <field name="planning_line_count" widget="statinfo" string="Planning"/>
                </button>
                <button class="oe_stat_button" icon="fa-eraser" name="action_open_changes" attrs="{'invisible': [('change_line_count','=',0)]}" type="object">
                    <field name="change_line_count" widget="statinfo" string="Changes"/>
                </button>
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <field name="origin_order_id" attrs="{'invisible': [('origin_order_id','=',False)]}"/>
            </xpath>
            <xpath expr="//field[@name='recurring_invoice_line_ids']/tree/field[@name='product_id']" position="after">
                <field name="day_name" readonly="1"/>
                <field name="start_date" required="1"/>
                <field name="has_planning_line" invisible="1"/>
                <button name="action_make_change" string="Make Change" type="object" attrs="{'invisible': [('has_planning_line','=', False)]}" icon="fa-list"/>
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_tree_form" model="ir.ui.view">
        <field name="name">view.sale.subscription.tree</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="create">0</attribute>
            </xpath>
        </field>
    </record>

</odoo>
