<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_subscription_order_line" model="ir.ui.view">
        <field name="name">sale.subscription.order.line</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                <field name="can_lock" invisible="1"/>
            </xpath>
            <xpath expr="//button[@name='action_done']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('can_lock','=',False)]}</attribute>
            </xpath>
            <xpath expr="//button[@name='action_cancel']" position="attributes">
                <attribute name="states">draft,sent,sale,waiting_route</attribute>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="after">
                <button name="action_confirm" string="Confirm Sale" type="object" attrs="{'invisible': [('state', 'not in', ['waiting_route'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="vz_sale_order_form_carrier" model="ir.ui.view">
        <field name="name">vz.sale.order.form.carrier</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="delivery.view_order_form_with_carrier"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='carrier_id']" position="attributes">
                <attribute name="attrs">{'readonly':[('state','not in',('draft','sent','waiting_route'))]}</attribute>
            </xpath>
        </field>
    </record>

</odoo>
