<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sale_subscription_view_list" model="ir.ui.view">
        <field name="name">view.sale.subscription.tree</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='recurring_next_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_view_form" model="ir.ui.view">
        <field name="name">view.sale.subscription.form</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription.sale_subscription_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="contact_person_id"/>
                <field name="partner_invoice_id"/>
                <field name="partner_shipping_id"/>
            </xpath>
            <xpath expr="//label[@for='recurring_next_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='recurring_next_date']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//button[@name='recurring_invoice']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='code']" position="after">
                <field name="client_order_ref" readonly="1"/>
            </xpath>
        </field>
    </record>

    <record id="sale_subscription_view_form_inherit_sale_subscription_asset" model="ir.ui.view">
        <field name="name">view.sale.subscription.form</field>
        <field name="model">sale.subscription</field>
        <field name="inherit_id" ref="sale_subscription_asset.sale_subscription_view_form_inherit_sale_subscription_asset"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='asset_category_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
